class Solution(object):
    def maxSubArray(self, nums):
        
        # maxSum = -float('inf')

        # for i in range(len(nums)):
        #     sum = 0
        #     for j in range(i, len(nums)):
        #         sum += nums[j]
        #         maxSum = max(maxSum, sum)


        # return maxSum   ----> TC = O(N**2)
        sum = 0
        maxSum = -float('inf')

        for num in nums:

            sum += num
            maxSum = max(maxSum, sum)

            if sum < 0:    ## anytime my sum goes less then zero its useless so set it back to 0
                sum = 0

        return maxSum    #### ----> TC = O(N)
