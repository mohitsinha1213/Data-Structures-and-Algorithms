class Solution(object):
    def maxSubArray(self, nums):
        

        sum = 0
        maxSum = -float('inf')

        for num in nums:

            sum += num
            maxSum = max(maxSum, sum)

            if sum < 0:    ## anytime my sum goes less then zero its useless so set it back to 0
                sum = 0

        return maxSum    
